<h1>New restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::ACCEPTEDRESTO%>
  <%= f.input :phone_number %>
  <%= f.submit class:"btn btn-primary"%>
<% end %>

<p><%= link_to "Return at list restaurants", restaurants_path, class: "btn btn-primary" %></p>
