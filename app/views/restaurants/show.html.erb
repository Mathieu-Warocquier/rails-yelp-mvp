<h1><%= @restaurant.name %></h1>

<p><strong>Address: </strong><%= @restaurant.address %></p>
<p><strong>Category: </strong><%= @restaurant.category %></p>
<p><strong>Phone number: </strong><%= @restaurant.phone_number%></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>

<p><%= link_to "+ Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<p><%= link_to "Return at list restaurants", restaurants_path, class: "btn btn-primary" %></p>
